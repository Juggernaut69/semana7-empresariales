<Window x:Class="Semana6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid >
        <StackPanel>
            <StackPanel>
                <Label Content="MANTENIMIENTO" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Nombre</Label>
                <TextBox x:Name="txtNombre" Width="120" />
                <Label>Descripción</Label>
                <TextBox x:Name="txtDescripcion" Width="120" />
                <Button x:Name="btnAgregar" Click="btnAgregar_Click" Content="Agregar" />
                <Button x:Name="btnEliminar" Click="btnEliminar_Click" Content="Eliminar" />
                <Button x:Name="btnCerrar" Click="btnCerrar_Click" Content="Cerrar" />
            </StackPanel>
        </StackPanel>
    </Grid>


</Window>